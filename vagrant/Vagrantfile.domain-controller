Vagrant.configure('2') do |config|
  servers.each do |server|
    if server.key?("roles") && server["roles"].include?("domain-controller")
      config.vm.define :server do |server_config|
        server_config.vm.box      = server["box"]
        server_config.vm.hostname = server["name"]
        server_config.vm.provision "shell", path: "../src/roles/domain-controller/scripts/sayit.ps1", privileged: false
      end
    end
  end
end